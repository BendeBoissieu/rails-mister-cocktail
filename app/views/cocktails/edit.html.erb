<<div class="container">

    <div class="col-xs-12">
      <h1><%= @cocktail.name %></h1>

     <!--  link_to "Modify the cocktail", root_path  -->

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe   <span class='glyphicon glyphicon-glass'></span> </h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient </th>
            <th>Description</th>

          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>

              <td>
                <%= link_to "delete this ingredient", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-primary'%>
              </td>

            </tr>
          <% end %>

    </div>
        </tbody>
      </table>

    </div>

  </div>
</div>


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Add a new dose
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">

                <%= simple_form_for [@cocktail, @dose] do |f| %>
                  <dt><p>Select an ingredient in the list:</p></dt>
                  <dt><%= f.association :ingredient %></dt>
                  <dt><p></p></dt>
                  <dt><p>Give the proportion of the ingredient </p></dt>
                  <dt><%= f.input :description %></dt>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.button :submit, class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
  </div>
</div>



