<div class="container">

    <div class="col-xs-12">
      <h1><%= @cocktail.name %></h1>

     <!--  link_to "Modify the cocktail", root_path  -->

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe   <span class='glyphicon glyphicon-glass'></span> </h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient </th>
            <th>Description</th>

          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
            </tr>
          <% end %>
    </div>
        </tbody>
      </table>

    </div>

  </div>
</div>








